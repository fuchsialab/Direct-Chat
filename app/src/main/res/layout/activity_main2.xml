<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity2">


    <RelativeLayout
        android:id="@+id/bb"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"
            android:layout_width="wrap_content"
            android:text="Direct Chat Without Saving Number"
            android:layout_centerInParent="true"
            android:layout_height="wrap_content">

        </TextView>

    </RelativeLayout>

    <ScrollView
        android:layout_below="@+id/bb"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView

                app:cardBackgroundColor="#F3F2F2"
                android:layout_centerInParent="true"
                android:layout_width="match_parent"
                android:layout_height="480dp"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="40dp"
                app:cardCornerRadius="8dp"
                android:id="@+id/cart1">

                <RelativeLayout

                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_marginBottom="10dp"
                        android:orientation="vertical"
                        android:layout_width="320dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:id="@+id/ll"
                        android:layout_centerHorizontal="true">



                        <TextView
                                android:layout_width="match_parent"
                                android:id="@+id/llll"
                                android:layout_height="wrap_content"
                                android:text="Send Message To This Number -"
                                android:textColor="#07A83D"
                                android:textAlignment="center"
                                android:textStyle="bold"
                                android:textSize="20sp" />

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="320dp"
                            android:layout_below="@+id/ll"
                            android:layout_marginBottom="10dp"
                            android:layout_centerHorizontal="true"
                            android:layout_height="wrap_content"
                            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                            <com.google.android.material.textfield.TextInputEditText

                                android:layout_width="match_parent"
                                android:id="@+id/numbr"
                                android:textSize="20sp"
                                android:textStyle="bold"
                                android:textColor="@color/colorPrimary"
                                android:textAlignment="center"
                                android:layout_height="wrap_content"
                                android:inputType="numberSigned"/>



                        </com.google.android.material.textfield.TextInputLayout>




                        <TextView


                            android:id="@+id/abbs"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="** Country code must be valid"
                            android:textColor="#FF1100"
                            android:textAlignment="center"
                            android:textStyle="bold"
                            android:textSize="15sp"
                            android:inputType="number"/>

                        <TextView

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="If country code is missing please enter it **"
                            android:textColor="#FF1100"
                            android:textAlignment="center"
                            android:textStyle="bold"
                            android:textSize="15sp"
                            android:inputType="number"/>



                    </LinearLayout>





                    <com.google.android.material.textfield.TextInputLayout
                        android:layout_width="320dp"
                        android:layout_below="@+id/ll"
                        android:id="@+id/gg"
                        android:layout_marginBottom="10dp"
                        android:layout_centerHorizontal="true"
                        android:layout_height="wrap_content"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                        <com.google.android.material.textfield.TextInputEditText

                            android:layout_width="match_parent"
                            android:id="@+id/mess"
                            android:layout_height="180dp"
                            android:hint="Type Your Message ..." />



                    </com.google.android.material.textfield.TextInputLayout>

                    <RelativeLayout

                        android:layout_below="@+id/gg"
                        android:id="@+id/adView"
                        android:gravity="center"
                        android:layout_centerHorizontal="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">


                    </RelativeLayout>



                    <Button

                        android:id="@+id/button"
                        android:textAllCaps="false"
                        android:layout_width="320dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/adView"
                        android:layout_centerHorizontal="true"
                        android:text="Start Chatting"
                        android:textColor="#FFFFFF"
                        android:textColorHint="#F3F3F6" />


                </RelativeLayout>



            </androidx.cardview.widget.CardView>


        </RelativeLayout>

    </ScrollView>

</RelativeLayout>